@{
    // Устанавливаем заголовок страницы
    ViewData["Title"] = "Home Page";
}

<!-- Заголовок страницы -->
<h4> Welcome to SportStore </h4>

<!-- Определение модели представления для списка продуктов -->
@model ProductsListViewModel

<!-- Перебор продуктов в модели и отображение их с помощью частичного представления ProductSummary -->
@foreach (var p in Model.Products)
{
    <partial name="ProductSummary" model="p" />
}

<!-- Создание пагинации для списка продуктов -->
<div page-model="@Model.PaginInfo" page-action="Index"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1"
     page-url-category="@Model.CurrentCategory" class="btn-group pull-right m-1">
</div>
